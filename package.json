{
  "name": "goodchords",
  "repository": "git@github.com:mrfrac/goodchords.git",
  "author": "mrfrac <fracturer@gmail.com>",
  "version": "0.5.0",
  "description": "Music theory library",
  "main": "dist/goodchords.cjs.js",
  "module": "dist/goodchords.es.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "npm run clean && rollup -c",
    "test": "jest",
    "testing": "jest --watch",
    "coverage": "jest --coverage",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "linter": "./node_modules/.bin/eslint --ignore-path .gitignore . --fix",
    "linter-dummy": "echo 'Linter must be here. FIX ME'"
  },
  "keywords": [
    "chord",
    "note",
    "interval",
    "scale",
    "music"
  ],
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.2.1",
    "rimraf": "^4.0.4",
    "rollup": "^3.7.5",
    "rollup-plugin-typescript2": "^0.34.1",
    "rollup-plugin-uglify": "^5.0.2",
    "ts-jest": "^29.0.5",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --parser typescript --write --trailing-comma all --arrow-parens always",
      "npm run typecheck",
      "npm run linter-dummy"
    ]
  }
}
