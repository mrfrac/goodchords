{
  "name": "goodchords",
  "version": "0.0.1",
  "description": "Some description here ;)",
  "main": "dist/goodchords.cjs.js",
  "module": "dist/goodchords.es.js",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && rollup -c",
    "test": "jest",
    "coverage": "jest --coverage",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "linter": "tslint --project ."
  },
  "keywords": [
    "chord",
    "note",
    "circle of fifths",
    "music"
  ],
  "dependencies": {
    "rollup": "^1.22.0",
    "rollup-plugin-typescript": "^1.0.1",
    "tslib": "^1.10.0",
    "typescript": "^3.6.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "coveralls": "^3.0.6",
    "husky": "2.7.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "rollup-plugin-uglify": "^6.0.3",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write --trailing-comma all --arrow-parens always",
      "npm run typecheck",
      "npm run linter",
      "git add"
    ]
  }
}
