{
  "name": "goodchords",
  "repository": "git@github.com:mrfrac/goodchords.git",
  "author": "mrfrac <fracturer@gmail.com>",
  "version": "0.3.1",
  "description": "Some description here ;)",
  "main": "dist/goodchords.cjs.js",
  "module": "dist/goodchords.es.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && rollup -c",
    "test": "jest",
    "testing": "jest --watch",
    "coverage": "jest --coverage",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "linter": "./node_modules/.bin/eslint --ignore-path .gitignore . --fix"
  },
  "keywords": [
    "chord",
    "note",
    "interval",
    "scale",
    "music"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.36.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --parser typescript --write --trailing-comma all --arrow-parens always",
      "npm run typecheck",
      "npm run linter",
      "git add"
    ]
  }
}
