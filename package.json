{
  "name": "goodchords",
  "version": "0.0.1",
  "description": "Some description here ;)",
  "main": "dist/goodchords.cjs.js",
  "module": "dist/goodchords.es.js",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && rollup -c",
    "test": "jest",
    "testing": "jest --watch",
    "coverage": "jest --coverage",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "linter": "tslint --project ."
  },
  "keywords": [
    "chord",
    "note",
    "circle of fifths",
    "music"
  ],
  "dependencies": {},
  "devDependencies": {
    "rollup": "^2.3.4",
    "rollup-plugin-typescript2": "^0.27.0",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3",
    "@types/jest": "^25.2.1",
    "coveralls": "^3.0.11",
    "husky": "2.7.0",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^25.3.1",
    "tslint": "^6.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --parser typescript --write --trailing-comma all --arrow-parens always",
      "npm run typecheck",
      "npm run linter",
      "git add"
    ]
  }
}
